{
    "name": "wemd-electron",
    "version": "1.1.2",
    "description": "WeMD - 更优雅的 Markdown 公众号排版工具",
    "main": "main.js",
    "homepage": "https://wemd.app",
    "author": "WeMD Team",
    "scripts": {
        "dev": "electron .",
        "build:mac": "electron-builder --mac -c electron-builder.json",
        "build:win": "electron-builder --win -c electron-builder.json",
        "build:linux": "electron-builder --linux -c electron-builder.json"
    },
    "keywords": [
        "markdown",
        "wechat",
        "editor"
    ],
    "license": "MIT",
    "build": {
        "appId": "app.wemd.desktop",
        "productName": "WeMD",
        "linux": {
            "target": [
                "AppImage"
            ],
            "maintainer": "tenngo <tenngo@wemd.app>",
            "category": "Office"
        }
    },
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    }
}